<UserControl x:Class="WiiTUIO.KeymapRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="240">
    <Grid>
        <Border Width="180" Name="border" Background="#FF2E2E2E" BorderThickness="0" BorderBrush="Red" Margin="5" CornerRadius="2">
        <TextBlock Name="tbName" Text="Default" Margin="5" FontSize="14" FontFamily="Segoe UI Semilight" Foreground="White" TextAlignment="Left" />
        </Border>
        <TextBlock Name="tbDefault" Text="default" Margin="158,13,39,11" FontSize="10" FontFamily="Segoe UI Semilight" Foreground="White" TextAlignment="Left" TextDecorations="{x:Null}" Visibility="Hidden" />
    </Grid>
</UserControl>
